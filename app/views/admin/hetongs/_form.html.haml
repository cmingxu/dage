= form_for [:admin, @hetong], :class => "form form-horizontal" do |f|

  = control_group_helper "名称", "例如: 山东xx合同", f.object.errors[:name].first do
    = f.text_field :name, :class => "input-xxlarge"

  = control_group_helper "编号", "例如: BH000001", f.object.errors[:bianhao].first do
    = f.text_field :bianhao, :class => "input-xxlarge"

  = control_group_helper "客户公司名称", "例如: 山东xx公司", f.object.errors[:client_name].first do
    = f.text_field :client_name, :class => "input-xxlarge"

  = control_group_helper "客户联系方式", "例如: 13611112222", f.object.errors[:client_contact].first do
    = f.text_field :client_contact, :class => "input-xxlarge"

  = control_group_helper "截至日期", "例如: 2015-01-23", f.object.errors[:end_time].first do
    = f.text_field :end_time, :class => "input-xxlarge date"

  = control_group_helper "合同价格", "例如: 1000000", f.object.errors[:price].first do
    = f.text_field :price, :class => "input-xxlarge"

  = control_group_helper "备注", "例如: ", f.object.errors[:beizhu].first do
    = f.text_area :beizhu, :class => "input-xxlarge"

  .actions
    = f.submit '增加', :class => "btn btn-primary"
    = link_to "返回", admin_hetongs_path, :class => "btn"
