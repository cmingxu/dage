= form_for @chuku do |f|
  - if @chuku.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chuku.errors.count, "error")} prohibited this chuku from being saved:"
      %ul
        - @chuku.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :quantity
    = f.text_field :quantity
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :hetong_id
    = f.number_field :hetong_id
  .actions
    = f.submit 'Save'
