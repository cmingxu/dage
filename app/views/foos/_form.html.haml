= form_for @foo do |f|
  - if @foo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@foo.errors.count, "error")} prohibited this foo from being saved:"
      %ul
        - @foo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :foo
    = f.text_field :foo
  .field
    = f.label :bar
    = f.text_field :bar
  .actions
    = f.submit 'Save'
